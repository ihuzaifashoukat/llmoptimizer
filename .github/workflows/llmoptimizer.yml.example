name: llmoptimizer

on:
  push:
    branches: [ main ]
  workflow_dispatch:

jobs:
  build-llm:
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v4
      - uses: actions/setup-node@v4
        with:
          node-version: 20
          cache: npm
      - run: npm ci
      - name: Build site
        run: |
          npm run build
      - name: Generate llm.txt (static)
        run: |
          npx llmoptimizer generate --root ./dist --out ./dist/llm.txt || \
          npx llmoptimizer generate --root ./build --out ./build/llm.txt
      - name: Upload artifact
        uses: actions/upload-artifact@v4
        with:
          name: llm.txt
          path: |
            dist/llm.txt
            build/llm.txt

