{
  "name": "llmoptimizer",
  "version": "1.0.0",
  "description": "Generate an llms.txt summary of your website/docs for LLMs (framework-agnostic with Vite/Next/Nuxt/Astro/Remix helpers).",
  "license": "MIT",
  "type": "module",
  "main": "dist/index.cjs",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    },
    "./cli": {
      "import": "./dist/cli.mjs",
      "require": "./dist/cli.cjs"
    },
    "./vite": {
      "import": "./dist/vite.mjs",
      "require": "./dist/vite.cjs"
    },
    "./next": {
      "import": "./dist/next.mjs",
      "require": "./dist/next.cjs"
    },
    "./astro": {
      "import": "./dist/astro.mjs",
      "require": "./dist/astro.cjs"
    },
    "./nuxt": {
      "import": "./dist/nuxt.mjs",
      "require": "./dist/nuxt.cjs"
    },
    "./remix": {
      "import": "./dist/remix.mjs",
      "require": "./dist/remix.cjs"
    },
    "./node": {
      "import": "./dist/node.mjs",
      "require": "./dist/node.cjs"
    },
    "./auto": {
      "import": "./dist/auto.mjs",
      "require": "./dist/auto.cjs"
    },
    "./docs": {
      "import": "./dist/docs.mjs",
      "require": "./dist/docs.cjs"
    },
    "./package.json": "./package.json"
  },
  "bin": {
    "llmoptimizer": "dist/cli.cjs"
  },
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "build": "tsup --config tsup.config.ts",
    "dev": "tsup --config tsup.config.ts --watch",
    "typecheck": "tsc --noEmit",
    "clean": "rimraf dist",
    "prepublishOnly": "npm run clean && npm run build && npm pack --dry-run"
  },
  "sideEffects": false,
  "files": [
    "dist",
    "README.md",
    "LICENSE",
    "llmoptimizer.config.example.ts"
  ],
  "dependencies": {
    "cheerio": "^1.0.0",
    "commander": "^12.0.0",
    "fast-xml-parser": "^4.5.0",
    "globby": "^14.0.0",
    "p-limit": "^5.0.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/node": "^20.12.7",
    "rimraf": "^5.0.5",
    "tsup": "^8.0.2",
    "typescript": "^5.4.5"
  }
} 
