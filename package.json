{
  "name": "llmoptimizer",
  "version": "1.1.0",
  "description": "Generate an llms.txt summary of your website/docs for LLMs (framework-agnostic with Vite/Next/Nuxt/Astro/Remix helpers).",
  "license": "MIT",
  "type": "module",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./cli": {
      "import": "./dist/cli.js",
      "require": "./dist/cli.cjs"
    },
    "./vite": {
      "import": "./dist/vite.js",
      "require": "./dist/vite.cjs"
    },
    "./next": {
      "import": "./dist/next.js",
      "require": "./dist/next.cjs"
    },
    "./astro": {
      "import": "./dist/astro.js",
      "require": "./dist/astro.cjs"
    },
    "./nuxt": {
      "import": "./dist/nuxt.js",
      "require": "./dist/nuxt.cjs"
    },
    "./remix": {
      "import": "./dist/remix.js",
      "require": "./dist/remix.cjs"
    },
    "./sveltekit": {
      "import": "./dist/sveltekit.js",
      "require": "./dist/sveltekit.cjs"
    },
    "./angular": {
      "import": "./dist/angular.js",
      "require": "./dist/angular.cjs"
    },
    "./node": {
      "import": "./dist/node.js",
      "require": "./dist/node.cjs"
    },
    "./auto": {
      "import": "./dist/auto.js",
      "require": "./dist/auto.cjs"
    },
    "./docs": {
      "import": "./dist/docs.js",
      "require": "./dist/docs.cjs"
    },
    "./package.json": "./package.json"
  },
  "bin": {
    "llmoptimizer": "dist/cli.cjs"
  },
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "build": "tsup --config tsup.config.ts",
    "dev": "tsup --config tsup.config.ts --watch",
    "typecheck": "tsc --noEmit",
    "clean": "rimraf dist",
    "prepublishOnly": "npm run clean && npm run build && npm pack --dry-run"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "sideEffects": false,
  "keywords": [
    "llms.txt",
    "llm",
    "ai",
    "seo",
    "robots.txt",
    "sitemap",
    "crawler",
    "nextjs",
    "vite",
    "nuxt",
    "astro",
    "remix",
    "docs",
    "markdown",
    "mdx",
    "static-site",
    "structured-data",
    "json-ld",
    "open-graph",
    "token-estimate",
    "context",
    "autodetect",
    "postbuild"
  ],
  "files": [
    "dist",
    "README.md",
    "LICENSE",
    "llmoptimizer.config.example.ts"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ihuzaifashoukat/llmoptimizer.git"
  },
  "bugs": {
    "url": "https://github.com/ihuzaifashoukat/llmoptimizer/issues"
  },
  "homepage": "https://github.com/ihuzaifashoukat/llmoptimizer#readme",
  "dependencies": {
    "cheerio": "^1.0.0",
    "commander": "^12.0.0",
    "fast-xml-parser": "^4.5.0",
    "globby": "^14.0.0",
    "p-limit": "^5.0.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/node": "^20.12.7",
    "rimraf": "^5.0.5",
    "tsup": "^8.0.2",
    "typescript": "^5.4.5"
  }
} 
